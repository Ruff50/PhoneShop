{% extends 'base.html.twig' %}

{% block title %}
	Catégorie :
	{{category.nom}}
{% endblock %}

{% block body %}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{path('homepage')}}">Accueil</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">{{category.nom}}</li>
		</ol>
	</nav>

	<h1>Catégorie :
		{{category.nom}}</h1>
	<div class="row">
		{% for p in category.products%}
			<div class="col-3">
				<div class="card">
					<img src="{{p.image}}" class="img-fluid" alt="Image du produit">
				</div>
				<div class="card-body">
					<h4 class="card-title">{{p.nom}}
						({{p.prix}}
						&euro;)</h4>
					<h5>
						<span class="badge bg-dark">
							{{p.getCategory().getNom()}}
						</span>
					</h5>
					<p class="card-text">{{p.designation}}</p>
					<a href="{{path('product_show', {'category_slug' : p.category.slug, 'slug': p.slug})}}" class="btn btn-primary btn-sm">Détails</a>
					<a href="#" class="btn btn-success btn-sm">Ajouter</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
