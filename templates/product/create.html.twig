{% extends "base.html.twig" %}


{% block title %}
	Création d'un produit
{% endblock %}

{% block body %}
	<h1>Nouveau produit</h1>

	{{ form_start(form) }}
	{{form_errors(form)}}
	<div class="row">
		<div class="col">
			{{ form_row(form.nom) }}
			{{ form_row(form.designation) }}
			{{ form_row(form.prix) }}
			{{ form_row(form.tva) }}
		</div>
		<div class="col">
			{{ form_row(form.image) }}
			{{ form_row(form.Qte) }}
			{{ form_row(form.category) }}

		</div>
	</div>

	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save"></i>
		Créer
	</button>
	{{ form_end(form) }}
{% endblock %}
