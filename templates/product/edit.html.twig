{% extends "base.html.twig" %}


{% block title %}
	Modification du produit
	{{ product.nom }}
{% endblock %}

{% block body %}
	<h1>Modifier le produit
		{{product.nom}}</h1>

	{{ form_start(form) }}
	{{form_errors(form)}}
	<div class="row">
		<div class="col">
			{{ form_row(form.nom) }}
			{{ form_row(form.designation) }}
			{{ form_row(form.prix) }}
			{{ form_row(form.tva) }}
		</div>
		<div class="col">
			{{ form_row(form.image) }}
			{{ form_row(form.quantite) }}
			{{ form_row(form.categorie) }}

		</div>
	</div>

	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save"></i>
		Modifier
	</button>
	{{ form_end(form) }}
{% endblock %}
