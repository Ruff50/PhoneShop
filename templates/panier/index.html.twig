{% extends 'base.html.twig' %}

{% block title %}Votre panier
{% endblock %}

{% block body %}
	<h1>Votre panier</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantit√©</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{% for item in details %}
				<tr>
					<td>{{ item.product.nom }}</td>
					<td>{{ item.product.prix }}</td>
					<td>{{ item.quantity }}</td>
					<td>{{ item.quantity*item.product.prix }}</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3">Total :</td>
				<td>{{ total }}</td>
			</tr>
		</tfoot>
	</table>

{% endblock %}
